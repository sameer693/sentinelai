{
  "dashboard": {
    "id": null,
    "title": "SentinelAI - AI-Powered NGFW Dashboard",
    "tags": ["sentinelai", "security", "ngfw", "ai"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Threat Detection Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(sentinelai_threats_detected_total[5m]))",
            "legendFormat": "Threats/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "title": "Detection Accuracy",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "(sum(sentinelai_threats_detected_total) - sum(sentinelai_false_positives_total)) / sum(sentinelai_threats_detected_total) * 100",
            "legendFormat": "Accuracy %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "System Latency",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(sentinelai_system_latency_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency (ms)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "ms",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Flows",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sentinelai_active_flows",
            "legendFormat": "Active Flows",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 5,
        "title": "Threat Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "increase(sentinelai_threat_score_bucket[1m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {},
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Oranges",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": false
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "ML Inference Performance",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(sentinelai_ml_inference_latency_seconds_bucket[5m])) * 1000",
            "legendFormat": "P50 Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(sentinelai_ml_inference_latency_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency",
            "refId": "B"
          },
          {
            "expr": "rate(sentinelai_ml_inference_total[5m])",
            "legendFormat": "Inferences/sec",
            "refId": "C",
            "yAxis": 2
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ms",
            "min": 0
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Inferences/sec"},
              "properties": [
                {"id": "unit", "value": "ops"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Network Traffic Volume",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "rate(sentinelai_bytes_total[5m]) * 8",
            "legendFormat": "{{protocol}} - {{interface}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bps",
            "min": 0
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 8,
        "title": "Policy Actions",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 17},
        "targets": [
          {
            "expr": "rate(sentinelai_policy_actions_total[5m])",
            "legendFormat": "{{action}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 9,
        "title": "System Resource Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "sentinelai_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          },
          {
            "expr": "sentinelai_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Memory MB",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Memory MB"},
              "properties": [
                {"id": "unit", "value": "decbytes"},
                {"id": "max", "value": null}
              ]
            }
          ]
        }
      },
      {
        "id": 10,
        "title": "Alert Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 25},
        "targets": [
          {
            "expr": "increase(sentinelai_alerts_generated_total[1m])",
            "legendFormat": "{{alert_type}} - {{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 11,
        "title": "Detection Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 25},
        "targets": [
          {
            "expr": "rate(sentinelai_false_positives_total[5m])",
            "legendFormat": "False Positives/sec",
            "refId": "A"
          },
          {
            "expr": "rate(sentinelai_false_negatives_total[5m])",
            "legendFormat": "False Negatives/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops",
            "min": 0
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "label": "Interface",
          "multi": false,
          "name": "interface",
          "options": [],
          "query": "label_values(sentinelai_packets_total, interface)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "tagValuesQuery": "",
          "tagsQuery": "",
          "type": "query",
          "useTags": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "schemaVersion": 30,
    "version": 1,
    "links": []
  }
}